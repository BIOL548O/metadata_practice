{
  "name": "gapminder_datapackage",
  "resources": [
    {
      "path": "data/The Gapminder Data.csv",
      "name": "The Gapminder Data",
      "schema": {
        "fields": [
          {
            "name": "country",
            "type": "string",
            "title": "Name of Country",
            "description": "A list of countries by name"
          },
          {
            "name": "continent",
            "type": "string"
          },
          {
            "name": "year",
            "type": "integer"
          },
          {
            "name": "lifeExp",
            "type": "number"
          },
          {
            "name": "pop",
            "type": "integer"
          },
          {
            "name": "gdpPercap",
            "type": "number"
          }
        ]
      }
    },
    {
      "path": "data/continent_sizes.csv",
      "name": "continent_sizes",
      "schema": {
        "fields": [
          {
            "name": "continent",
            "type": "string"
          },
          {
            "name": "size",
            "type": "string"
          }
        ]
      }
    }
  ]
}
